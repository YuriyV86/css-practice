<header class='header'>
  <div>
    {{>logo}}
  </div>

  <nav class='header_nav'>
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>

{{#with main}}
  <div class="main">
    <img class="main_image" src="{{image}}" alt="Main Image">

    <div class="main_content">      
      <h1 class="main_title">{{heading}}</h1>
      <p class="main_text">{{descriotion}}</p>
      <a
        href='{{href}}'
        class='button main_button'
      >{{button}}</a>
    </div>
  </div>
{{/with}}

<main class="featured">
  {{#each featured}}
    {{> cardFeatured data=this}}
  {{/each}}
</main>

<div class='act'>
  {{#each actions}}
    {{> formActions data=this}}
  {{/each}} 
</div>

<footer class="footer">
  <div>
    {{>logo}}
    <span class="footer_copyright">Â© 2023</span> 
  </div>

  {{#each footer}}
    <div>
      <span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
  
</footer>
