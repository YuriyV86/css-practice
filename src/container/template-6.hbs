<header class='header'>
  <div>
    {{>logo}}
  </div>

  <nav class='header_nav'>
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  {{#with info}}
    <div class="info">
      <h1 class="info_title">{{title}}</h1>
      <p class="info_text">{{description}}</p>
    </div>
  {{/with}}

  
  <form class="form">
    {{#with form}}
      <div class="form_input_list">
        {{#each inputs}}
          <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form_input-{{id}}">
        {{/each}}        
      </div>

      <div class="form_checkbox">
        <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
        <div></div>
        <label for="{{checkbox.name}}">{{checkbox.label}}</label>
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <div class="form_divider"></div>
      <p class="form_info">{{info}}</p>
    {{/with}}
  </form>
</main>

<div class="updates">
  {{#with updates}}
    <h3 class="updates_title">{{title}}</h3>
    {{#each list}}
      <div class="upd_item">
        <img class="upd_item_img" src="https://picsum.photos/32/32"></img>

        <div class="upd_item_data">
          <strong class="upd_item_name">{{nickname}}</strong>
          <p class="upd_item_text">{{description}}</p>          
        </div>

      </div>
    {{/each}}

    <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
  {{/with}}  
</div>

<div class="expirience">
  {{#with expirience}}
    <h2 class="exp_title_text">{{title}}</h2>

    <div class="expirience_badge">{{badge}}</div>

    <div class="expirience_cards">
      {{#each list}}
        <div class="exp_card">
          <h4 class="exp_card_title">{{name}}</h4>
          <p class="exp_card_text">{{details}}</p>
        </div>
      {{/each}}
    </div>
  {{/with}}
</div>

<footer class="footer">
  <div>
    {{>logo}}
    <span class="footer_copyright">Copyright 2023-2024</span> 
  </div>

  {{#each footer}}
    <div>
      <span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
  
</footer>
