<div
  class='analytic analytic--single {{#if color-class}}{{color-class}}{{else}}border-line{{/if}}'
>
  <span
    class='icon analytic__button icon--button
      {{#if icon-color-class}}{{icon-color-class}}{{else}}border-line{{/if}}
      click'
    style="background-image: url('/svg/analytic/{{img}}')"
  ></span>

  <div class='vertical vertical--single'>
    <div class='text 
      {{#if color-class}}text--light{{/if}}
      text--bold'>{{title}}</div>
    <div
      class='text text--small {{#if color-class}}text--lighter{{else}}text--gray{{/if}}'
    >{{text}}</div>
  </div>
</div>